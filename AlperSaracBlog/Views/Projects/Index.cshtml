<style>
    body {
        font-family: Arial, sans-serif;
        padding: 20px;
    }

    h1 {
        margin-bottom: 20px;
    }

    .repositories-container {
        display: flex;
        flex-wrap: wrap;
    }

    .repository-item {
        flex: 0 0 calc(33.33% - 20px);
        margin: 10px;
        padding: 10px;
        border: 1px solid #ccc;
        background-color: #f9f9f9;
    }

        .repository-item a {
            text-decoration: none;
            color: #0366d6;
            display: block;
            padding: 10px;
            transition: background-color 0.2s;
        }

            .repository-item a:hover {
                background-color: #0366d6;
                color: #fff;
            }

            .repository-item a:active {
                background-color: #003ea3;
            }

    #all-repositories-link {
        text-decoration: none;
        color: #0366d6;
        background-color: #f9f9f9;
        padding: 10px;
        border: 1px solid #ccc;
        transition: background-color 0.2s;
    }

        #all-repositories-link:hover {
            background-color: #0366d6;
            color: #fff;
        }

        #all-repositories-link:active {
            background-color: #003ea3;
        }
</style>
